<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="300dp"
    android:minHeight="200dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/pacWhiteMix"
        android:text="@string/mn_fingerprint_message"
        android:layout_weight="1.4"/>

    <TextView
        android:id="@+id/fingerprint_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight="1.5"
        android:textColor="@color/pacWhiteMix"
        android:text="@string/mn_fingerprint_waiting"
        android:gravity="center_vertical"/>

    <me.aflak.libraries.view.Fingerprint
        xmlns:fingerprint="http://schemas.android.com/apk/res-auto"
        fingerprint:circleScanningColor="@color/pacTrans"
        fingerprint:fingerprintScanningColor="@color/colorAccent"
        android:id="@+id/fingerprint"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/dialog_cancel"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:textColor="@color/pacWhiteMix"
        android:text="@string/fingerprint_cancel"
        android:textSize="10sp"
        style="@style/Widget.AppCompat.Button.Borderless" />
</LinearLayout>